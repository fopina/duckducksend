{
  "scripts": {
    "clean": "rimraf dist/*",
    "build:css": "mkdir -p dist/css && cp node_modules/@picocss/pico/css/pico.classless.min.css dist/css/",
    "build:html": "mkdir -p dist && cp src/index.html dist/",
    "build": "run-s build:*",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "watch:html": "onchange \"src/*.html\" -- npm run build:html",
    "watch": "run-p serve watch:*"
  },
  "dependencies": {
    "@picocss/pico": "^2.0.6"
  },
  "devDependencies": {
    "browser-sync": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "rimraf": "^5.0.7"
  }
}
